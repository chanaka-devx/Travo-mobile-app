# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# editorconfig.org

root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Dart files
[*.dart]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Gradle files
[*.gradle]
indent_size = 4

# Swift files
[*.swift]
indent_size = 4

# Kotlin files
[*.kt]
indent_size = 4

# XML files
[*.xml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Markdown in documentation
[docs/**/*.md]
trim_trailing_whitespace = false
